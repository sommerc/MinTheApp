<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="16dp"
    android:paddingBottom="44dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
            android:id="@+id/entry_stripe"
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_height="24dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/entry_speaker_mod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@id/entry_stripe"
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_orange_light"

            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/entry_speaker_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="16dp"
                android:layout_width="164dp"
                android:layout_height="164dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/entry_speaker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/entry_speaker_affi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="10sp"
                    android:paddingTop="1dp"
                    android:text="My cool affiliation"
                    />


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/entry_title"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <WebView
        android:id="@+id/entry_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="8sp"
        android:paddingBottom="2dp"
    />

</LinearLayout>